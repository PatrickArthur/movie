<title>Movies</title>

<h3>Movies</h3>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Year</th>
       <th>Genre</th>
    </tr>
  </thead>

  <tbody>
    <% @data.each do |movie| %>
      <tr>
        <td><a href="<%= "/movies/#{movie[:id]}" %>"><%= movie[:title] %></a></td>
        <td><%= movie[:year] %></td>
        <td><%= movie[:genre] %></td>
      </tr>
    <% end %>
  </tbody>

</table>


